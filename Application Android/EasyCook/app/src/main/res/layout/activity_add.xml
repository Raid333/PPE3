<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alexandrenormand.easycook.AddActivity">

    <TextView
        android:text="Type de recette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_type"
        android:layout_marginTop="31dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/type_spin"
        android:layout_marginTop="41dp"
        android:layout_alignTop="@+id/t_type"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters|textPersonName"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/type_spin"
        android:layout_centerHorizontal="true"
        android:hint="Nom Recette..." />

    <Button
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_valide"
        android:layout_marginTop="98dp"
        android:layout_below="@+id/editName"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editName"
        android:layout_alignEnd="@+id/editName"
        android:layout_marginTop="25dp"
        android:id="@+id/editDescri"
        android:hint="Description..." />

</RelativeLayout>
