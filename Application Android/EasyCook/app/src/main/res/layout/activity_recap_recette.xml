<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recap_recette"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="alexandrenormand.easycook.RecapRecette">

    <TextView
        android:text="Recette ajoutÃ©e !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps" />

    <TextView
        android:text="Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="25dp"
        android:id="@+id/textView4"
        android:textSize="24sp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="36dp"
        android:id="@+id/textView6"
        android:textSize="24sp" />

    <Button
        android:text="Retour Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:id="@+id/btn_return" />

    <TextView
        android:text="descri_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descri_txt"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignEnd="@+id/name_txt"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_txt"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/name_txt" />

    <TextView
        android:text="name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_txt"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Nom : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView2"
        android:textSize="24sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>
